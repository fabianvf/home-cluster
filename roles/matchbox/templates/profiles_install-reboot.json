{
  "id": "install-reboot",
  "name": "Install CoreOS Container Linux and Reboot",
  "boot": {
    "kernel": "/assets/coreos/{{ coreos_version }}/coreos_production_pxe.vmlinuz",
    "initrd": ["/assets/coreos/{{ coreos_version }}/coreos_production_pxe_image.cpio.gz"],
    "args": [
      "initrd=coreos_production_pxe_image.cpio.gz",
      "coreos.config.url=http://{{ matchbox_host }}:{{ matchbox_port }}/ignition?uuid=${uuid}&mac=${mac:hexhyp}",
      "coreos.first_boot=yes",
      "console=tty0",
      "console=ttyS0",
      "coreos.autologin"
    ]
  },
  "ignition_id": "install-reboot.yaml"
}
